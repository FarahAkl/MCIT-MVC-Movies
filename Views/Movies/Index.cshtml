@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewData["Title"] = "Index";
}
<style>
.btn{
    text-decoration:none;
    color:#fff;
    background-color:#493483;
    &:hover{
    background-color:#fff;
    color:#493483;
    border:2px solid #493483;
    }
    &.delete{
        background-color:red;
        &:hover{
            border-color:red;
        }
    }

}
</style>
<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn-primary px-4 py-2 rounded text-decoration-none shadow">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn delete">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>